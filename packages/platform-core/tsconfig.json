{
	"compilerOptions": {
		"target": "esnext",
		"moduleResolution": "node",
		"module": "esnext",
		"allowJs": true,
		"resolveJsonModule": true,
		"declaration": true,
		"sourceMap": true,
  	"emitDeclarationOnly": true,
		"strict": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"baseUrl": "src",
		"paths": {
			"#/*": [ "*" ]
		}
	},
	"include": [
		"./src"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}