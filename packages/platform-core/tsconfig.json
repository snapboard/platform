{
	"compilerOptions": {
		"lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
		"moduleResolution": "node",
		"allowJs": true,
		"resolveJsonModule": true,
		"strict": true,
		"outDir": "lib",
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"baseUrl": "src",
		"paths": {
			"#/*": [ "*" ]
		}
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}